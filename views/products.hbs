            Products ! 
        </H1>

        
        <div class="container"> 
            <div class="row">
                {{#each products}}
                    <div class="col-4">
                        {{this.TenSP}}
                        <br> 
                        <img width="200px" src="{{this.Links}}" />
                        <br>
                        {{this.GiaBan}} <span><button onclick="themvao( '{{this.MaSP}}', '{{this.TenSP}}', '{{this.GiaBan}}' , '{{this.Links}}')">Add to Cart</button></span>
                        <br><p>{{this.MoTa}}</p>
                    </div>
                {{/each}}
            </div>
        </div>

        <form action="/order/review" method="POST" id="submitOrder">
            <input type="text" hidden id="dshang" name="dshang">
        </form>
        


<script>
    const  dict = new Map();
    const  setSP = new Set();
    sl = 0;
    function themvao(masp, tensp, giaban, links) {
        sl++;
        if (setSP.has(masp)) {
            x = dict.get( masp );
            x[2]++;
            dict.set( masp, x );
        } else {
            dict.set( masp, [tensp, giaban, 1, links] );
            setSP.add(masp);
        }
        console.log(dict);
        console.log(JSON.stringify(Array.from(dict.entries()) ) );
        
        
        var elem = document.getElementById("soluong");
        elem.innerText = "" + sl + " , " + dict.size + " loai"; 

    }

    function showgiohang() {        
        console.log(dict);
        var elem = document.getElementById("dshang");
        elem.value = JSON.stringify( Array.from(dict.entries())  ) ; //Array.from(dict.entries()) 
        var xform = document.getElementById("submitOrder");
        xform.submit();
    }
</script>